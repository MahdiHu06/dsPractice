## Creating a graphing calculator using turles
import turtle
import numpy as np
tess = turtle.Turtle()
wn = turtle.Screen()
## Set up the screen
def createScreen(width, height, title):
    wn.setup(width, height)
    wn.bgcolor('black')
    wn.title(title)

## Set up our turtle
def createTess(size):
    tess.pensize(size)
## Instruct tess to draw a graph
def drawPolyGraph(a, b, c, d):
    xsq = float(a)
    x = float(b)
    sy = float(c)
    dx = 1
    time = 10
    ## Get in position
    tess.color('black')
    tess.left(90)
    tess.forward(sy)
    tess.right(90)
    tess.color('white')
    ##Draw the graph
    while (time > 0):
        da = a * dx
        d2a = da * dx
        db = np.multiply(b, dx)
        m = float(d2a + db)
       
    #start moving
        tess.forward(0.9)
        tess.left(90)
        tess.forward(m)
        tess.right(90)
        dx = dx + 1
        time = time - 1
    if time == 0:
        tess.write(m)
## Run all the functions above
createScreen(1000, 700, 'Graphing Calculator')
createTess(1)
drawPolyGraph(3, -12, -270, 1)
## wait for user to close tab
wn.mainloop() 