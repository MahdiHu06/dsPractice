## Creating a graphing calculator using turles
import turtle
import numpy as np
tess = turtle.Turtle()
wn = turtle.Screen()
## Set up the screen
def createScreen(width, height, title):
    wn.setup(width, height)
    wn.bgcolor('black')
    wn.title(title)

## Set up our turtle
def createTess(color, size):
    tess.color(color)
    tess.pensize(size)
## Instruct tess to draw a graph
def drawPolyGraph(a, b, c, d):
    xsq = float(a)
    x = float(b)
    sy = float(c)
    dx = 1
    time = 6
    if (a > 0 and b > 0):
        while (time > 0):
            da = a * dx
            d2a = da * dx
            db = np.multiply(b, dx)
            m = float(d2a + db)
       
        #start moving
            tess.forward(1)
            tess.left(90)
            tess.forward(m)
            tess.right(90)
            dx = dx + 1
            time = time - 1
## Run all the functions above
createScreen(1000, 700, 'Graphing Calculator')
createTess('white', 5)
drawPolyGraph(2, 1, 1, 1)
## wait for user to close tab
wn.mainloop() 